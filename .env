# WealthLite 环境变量配置示例
# 复制此文件为 .env 并根据需要修改配置

# 数据存储路径
DATA_PATH=./data

# 备份路径
BACKUP_PATH=./data/backups

# 加密密钥（留空则自动生成）
ENCRYPTION_KEY=

# 应用设置
APP_NAME=WealthLite
APP_VERSION=1.0.0

# 调试模式
DEBUG=False

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 自动备份间隔（天）
AUTO_BACKUP_DAYS=7

# 数据文件格式 (csv, json)
DATA_FORMAT=csv 