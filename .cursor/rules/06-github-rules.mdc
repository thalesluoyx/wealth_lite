# Git Rules
git:
  branch_naming:
    feature: feature/*
    bugfix: bugfix/*
    hotfix: hotfix/*
    release: release/*
  commit_message:
    format: "<type>(<scope>): <description>"
    types:
      - feat
      - fix
      - docs
      - style
      - refactor
      - test

      - chore